
<div class="row pt-3 justify-content-center">
    <div class="col-8">
        <div class="card card-default">
            <div class="card-header"><h5>بازیابی رمز عبور</h5></div>
            <div class="card-body">
                <form class="form-horizontal" role="form" method="POST" action="/auth/password/reset" novalidate>

                    <%- include(viewPath('layouts/error-messages')) -%>

                    <input type="hidden" name="token" value="<%= token %>">

                    <div class="form-group">
                        <label for="email" class="control-label">آدرس ایمیل</label>
                        <input id="email" type="email" class="form-control" name="email" value="<%= old('email') %>" required>
                    </div>

                    <div class="form-group">
                        <label for="password" class="control-label">پسورد جدید</label>
                        <input id="password" type="password" class="form-control" name="password" value="<%= old('password') %>" required>
                    </div>
    
                    <div class="form-group">
                        <%- recaptcha %>                            
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">
                            ریست
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
