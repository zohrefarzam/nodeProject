<div class="d-flex justify-content-between align-items-center mb-3 border-bottom-1">
        <h2>ویدیوها</h2>
        <div class="btn-group">
            <a href="/admin/episodes/create" class="btn btn-sm btn-primary">ایجاد ویدیو جدید</a>
            <a href="/admin/episodes" class="btn btn-sm btn-danger">بخش ویدیوها</a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th>عنوان دوره</th>
                <th>تعداد نظرات</th>
                <th>تعداد دانلود</th>
                <th>مقدار بازدید</th>
                <th>وضعیت ویدیوها</th>
                <th>تنظیمات</th>
            </tr>
            </thead>
            <tbody>
                <% episodes.docs.forEach(episode => { %> 
                    <tr>
                        <td><a href="/episodes/آپدیت-جدید-راکت"><%= episode.title %></a></td>
                        <td><%= episode.commentCount %></td>
                        <td><%= episode.downloadCount %></td>
                        <td><%= episode.viewCount %></td>
                        <td>
                            <%= episode.typeToPersian() %>
                        </td>
                        <td>
                            <form action="/admin/episodes/<%= episode._id %>?_method=DELETE" method="post">
                                <div class="btn-group btn-group-sm">
                                    <a href="/admin/episodes/<%= episode._id %>/edit"  class="btn btn-primary">ویرایش</a>
                                    <button type="submit" class="btn btn-danger">حذف</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>

        <%- include(viewPath('layouts/pagination') ,{ pagination : episodes}) %>
    </div>
    
    