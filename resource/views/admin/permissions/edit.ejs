<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>ویرایش اجازه</h2>
</div>
<form class="form-horizontal" action="/admin/users/permissions/<%= permission.id %>?_method=put" method="post">

    <%- include(viewPath('layouts/error-messages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="name" class="control-label font-weight-bold">عنوان اجازه</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="عنوان را وارد کنید" value="<%= old('name' , permission.name) %>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="label" class="control-label font-weight-bold">توضیح</label>
            <input type="text" class="form-control" name="label" id="label" placeholder="توضیح را وارد کنید" value="<%= old('label' , permission.label) %>">
        </div>
    </div>

    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ویرایش</button>
        </div>
    </div>
</form>
