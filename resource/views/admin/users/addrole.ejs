<div class="d-flex justify-content-between align-items-center mb-3 pb-2 border-bottom">
    <h2>افزودن سطح جدید</h2>
</div>
<form class="form-horizontal" action="/admin/users/<%= user.id %>/addrole?_method=put" method="post">

    <%- include(viewPath('layouts/error-messages')) -%>

    <div class="form-group row">
        <div class="col">
            <label for="name" class="control-label font-weight-bold">نام و ایمیل کاربر</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="عنوان را وارد کنید" value="<%= user.name + ' - ' + user.email %>">
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label for="roles" class="control-label font-weight-bold font-weight-bold">سطوح دسترسی</label>
            <select name="roles" id="roles" class="form-control form-control-chosen" data-placeholder="سطح دسترسی مورد نظر ..." multiple>
                <% roles.forEach(role => { %> 
                    <option value="<%= role.id %>"<%= old('roles' , user.roles).indexOf(role.id) !== -1 ? 'selected' : ''%> ><%= role.label %></option>                        
                <% }) %>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col">
            <button type="submit" class="btn btn-danger">ثبت</button>
        </div>
    </div>
</form>


<link rel="stylesheet" href="/css/component-chosen.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.6/chosen.jquery.min.js"></script>
<script>
    $('.form-control-chosen').chosen({});
</script>